# Vite loads env from repo root (see frontend/vite.config.ts envDir)
# Add your real values without quotes. Do not commit secrets.

# --------------------------------------------------------------------
# Supabase CLI / Edge Functions
# --------------------------------------------------------------------
SUPABASE_PROJECT_ID=your-project-ref
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
EDGE_WEBHOOK_SECRET=change-me
ALLOWED_ORIGIN=http://localhost:5173
IMPORTS_BUCKET=imports
CIR_DATASET_CLASSIFICATION=cir_classification
CIR_DATASET_SEGMENT=cir_segment

# --------------------------------------------------------------------
# Frontend (Vite) public env
# --------------------------------------------------------------------
# Required: Supabase project URL (https://xxxx.supabase.co)
VITE_SUPABASE_URL=https://your-project.supabase.co

# Required: Supabase anon/public API key (get from Supabase Dashboard → Settings → API)
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Optional: Base URL for any custom API you may add
# VITE_API_BASE_URL=http://localhost:3000

# Optional: Development server port
VITE_DEV_PORT=5176

# Optional: Disable HMR for debugging
VITE_DISABLE_HMR=1
